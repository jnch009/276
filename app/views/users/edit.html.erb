<% provide(:title, "Settings") %>
<h1>Update Your Profile</h1>
<div class="row">
  <div class="Form-Wrap">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.text_field :name, class: 'input', :placeholder => "Name *" %>

      <%= f.email_field :email, class: 'input', :placeholder => "Email *" %>

      <%= f.password_field :password, class: 'input', :placeholder => "New (or old) Password *" %>

      <%= f.password_field :password_confirmation, class: 'input', :placeholder => "Confirm Password *" %>

      <%= f.submit "Save Changes", class: "buttonBox" %>
    <% end %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank">Click here to change your avatar.</a></br>(Your email must match to take effect)
    </div>      
  </div>
</div>